<section class="content current" data-thread-id="{{ thread_id }}">
  <section class="row header">
    <div class="col-xs-10">
      <h1>{{ name }}</h1>
    </div>

    <div class="col-xs-2">
      <button class="login btn btn-primary">Login</button>
      <button class="logout btn btn-danger">Logout</button>
      <a href="#" data-thread-id="{{ thread_id }}" class="unsubscribe">X</a>
    </div>
  </section>

  <section class="body">
    <div class="messages messages-main-container col-xs-12">
      <ul></ul>

      <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
          Loading...
        </div>
      </div>
    </div>
  </section>

  <section class="row footer">
    <div class="col-xs-12">
      <input type="text">
    </div>
  </section>
</section>
